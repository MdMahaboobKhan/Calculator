<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="com.example.sufiyankhan.calculator.MainActivity">

    <TextView
        android:id="@+id/Aval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A : "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="53dp" />

    <EditText
        android:id="@+id/AText"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintLeft_toRightOf="@+id/Aval"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Bval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Aval"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/addVal"
        android:layout_width="294dp"
        android:layout_height="0dp"
        android:onClick="add"
        android:text="ADD"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/resVal" />

    <Button
        android:id="@+id/subVal"
        android:layout_width="295dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:onClick="sub"
        android:text="SUBTRACT"
        app:layout_constraintTop_toBottomOf="@+id/addVal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/mulVal"
        android:layout_width="295dp"
        android:layout_height="51dp"
        android:layout_marginTop="17dp"
        android:onClick="mul"
        android:text="MULTIPLY"
        app:layout_constraintTop_toBottomOf="@+id/subVal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/resVal"
        android:layout_width="309dp"
        android:layout_height="51dp"
        android:text="RESULT : "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/BText" />

    <Button
        android:id="@+id/divVal"
        android:layout_width="293dp"
        android:layout_height="52dp"
        android:layout_marginTop="9dp"
        android:onClick="div"
        android:text="DIVIDE"
        app:layout_constraintTop_toBottomOf="@+id/mulVal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/BText"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintLeft_toRightOf="@+id/Bval"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AText" />

</android.support.constraint.ConstraintLayout>
